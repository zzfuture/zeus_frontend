<style is:global>
	:root {
		--accent: 255, 215, 0;
		--accent-light: 255, 223, 77;
		--accent-dark: 204, 172, 0;
		--bg-color: #0a0a0a;
		--text-color: #ffffff;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--bg-color);
		color: var(--text-color);
	}
	body {
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	header {
		padding: 1rem;
		text-align: right;
	}
	main {
		flex: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 2rem;
	}
	footer {
		padding: 1rem;
		text-align: center;
		background-color: rgba(255, 255, 255, 0.1);
	}
	footer a {
		color: var(--text-color);
		text-decoration: none;
		margin: 0 0.5rem;
	}
	footer a:hover {
		color:rgb(133, 163, 255);
		transition: all 0.3s ease;
	}
	.login-link {
		color: var(--text-color);
		text-decoration: none;
		font-weight: bold;
	}
	.login-link:hover {
		text-decoration: underline;
	}
</style>